<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myapplication">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />

    <queries>
        <intent>
            <action android:name="android.intent.action.TTS_SERVICE" />
        </intent>
    </queries>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_background"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication">
        <activity
            android:name=".Activities.SpecificEventActivity"
            android:label="@string/title_activity_specific_event"
            android:theme="@style/Theme.MyApplication.NoActionBar"></activity>
        <activity
            android:name=".Activities.EventsActivity"
            android:label="@string/title_activity_events"
            android:theme="@style/Theme.MyApplication.NoActionBar" />
        <activity
            android:name=".Activities.ShoppingLists.SpecificListActivity"
            android:label="@string/title_activity_specific_list"
            android:theme="@style/Theme.MyApplication.NoActionBar" />
        <activity
            android:name=".Activities.ShoppingLists.ShopListActivity"
            android:label="@string/title_activity_shop_list"
            android:theme="@style/Theme.MyApplication.NoActionBar" />
        <activity
            android:name=".Activities.Tasks.UpdateTaskActivity"
            android:label="@string/title_activity_update_task"
            android:theme="@style/Theme.MyApplication.NoActionBar" />
        <activity
            android:name=".Activities.Tasks.CreateTaskActivity"
            android:label="@string/title_activity_create_task"
            android:theme="@style/Theme.MyApplication.NoActionBar" />
        <activity
            android:name=".Activities.Tasks.TasksActivity"
            android:label="@string/title_activity_tasks"
            android:theme="@style/Theme.MyApplication.NoActionBar" />
        <activity
            android:name=".Activities.MainActivity"
            android:theme="@style/Theme.MyApplication.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>